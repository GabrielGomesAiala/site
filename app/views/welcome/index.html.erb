



<section id="slider">
		<div id="home-carousel" class="carousel slide" data-ride="carousel">
			<div class="carousel-inner">


				<% @capas.each_with_index do |photo, n| %>
				<div class="item <%= n  == 0 ? 'active' : '' %>" style="background-image:url(<%= photo.imagem.url(:medium) %>)">

					<div class="carousel-caption container">
						<div class="row">
							<div class="col-sm-7">
								<h1><%= photo.descricao %> </h1>

							</div>
						</div>
					</div>
				</div>
				<% end %>

				
			</div>
		</div> <!--/#home-carousel-->
    </section>


		<% if current_user  %>
		<section id="our-team">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="section-title">
						<h1>Deletar capas</h1>
						<span class="st-border"></span>
					</div>
				</div>



				<% @capas.each do |capa| %>

				<div class="col-md-3 col-sm-6">
					<div class="team-member">
						<div class="member-image">
							<img class="img-responsive" src="<%= capa.imagem.url(:medium) %>" alt="">

						</div>
						<div class="member-info">
							<h4><%= capa.descricao %></h4>
							<p ><%= link_to "destroy", capa_path(capa.id), method: "delete", class: "btn btn-delete" %><p>
						</div>
					</div>
				</div>
				<% end %>

			</div>
		</div>
	</section>
	<% end %>
