<!DOCTYPE html>
<html>
  <head>
    <title>Loja SanTelmo</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <%= stylesheet_link_tag 'style' %>
     <%= javascript_include_tag "rails" %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/bootstrap.filestyle/1.1.0/js/bootstrap-filestyle.min.js"> </script>
    <link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">



  </head>


  <body class="homepage">

    <header id="header">
		<nav class="navbar st-navbar navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#st-navbar-collapse">
						<span class="sr-only">Toggle navigation</span>
				    	<span class="icon-bar"></span>
				    	<span class="icon-bar"></span>
				    	<span class="icon-bar"></span>
					</button>
					<a class="logo" href="/"> <%= image_tag("logotipo.jpg", size: "270x100" )%></a>
				</div>

				<div class="collapse navbar-collapse" id="st-navbar-collapse">
					<ul class="nav navbar-nav navbar-right">
            <li ><a href="/">Home</a></li>
            <li ><a href="/produtos">Produtos</a></li>
            <li ><a href="/quemsomos">Empresa</a></li>
            <% if current_user %>
            <li><a href="/admin/produtos/new">novo produto</a></li>
            <li><a href="/admin/capas/new">nova capa</a></li>
            <li><%= link_to "Log out", logout_path, 'data-method' => :delete %></li>
            <% end %>

					</ul>
				</div><!-- /.navbar-collapse -->
			</div><!-- /.container -->
		</nav>
	</header>



    <%= yield %>





  <footer id="footer">
		<div class="container">
			<div class="row">
				
				<div class="col-sm-6 col-sm-pull-6 copyright">
					<p> <a href="">SanTelmo</a> !!!!.</p>
				</div>
			</div>
		</div>
	</footer>

  </body>
</html>
